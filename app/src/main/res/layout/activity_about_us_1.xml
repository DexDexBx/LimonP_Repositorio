<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="@drawable/fondo15">


        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/boton_redondo"
                android:onClick="AboutUsNow">

            </Button>

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/boton_redondo"
                android:backgroundTint="@color/colorPrimaryDark">

            </Button>

            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_redondo"
                android:backgroundTint="@color/colorPrimary">

            </Button>

        </LinearLayout>

        <ImageView
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:background="@drawable/logo"
            android:layout_gravity="center">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminos y Condiciones"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="cursive"
            android:textSize="20dp">

        </TextView>


        <CheckBox
            android:id="@+id/cbx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:checked="false"
            android:onClick="Continuar"
            android:text="Acepto los terminos y condiciones de la aplicación móvil"
            android:textSize="9dp">

        </CheckBox>

        <Button
            android:id="@+id/continued"
            android:layout_width="200dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_rounded"
            android:editable="false"
            android:enabled="false"
            android:fontFamily="sans-serif-condensed-medium"
            android:onClick="BienvenidoNow"
            android:text="Continuar"
            android:textSize="15dp">

        </Button>


    </LinearLayout>

</LinearLayout>