<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/grad_backgroud"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/imgView_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/limon"/>

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="wrap_content"
            android:layout_below="@+id/imgView_logo"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sing Up"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:id="@+id/linelay1"
                android:layout_below="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/ic_action_name"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Name"></EditText>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/ic_action_user"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:hint="Email"></EditText>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/ic_action_lock"
                        android:ems="10"
                        android:inputType="textVisiblePassword"
                        android:hint="Password"/>


                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/linelay1"
                android:text="Sing Up"
                android:textAllCaps="false"
                android:background="@drawable/btn_background"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:layout_marginTop="10dp"></Button>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:text="Login Now"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>



</RelativeLayout>